public class Pizza extends Fridge{
   private String size;
   private boolean toppings;

   public Pizza(String itsName, String itsType, LocalDate itsPurchaseDate, LocalDate itsExpirationDate, String itsSize){
      super(itsName,itsType,itsPurchaseDate, itsExpirationDate);

      size= itsSize;


   }
   public  String getSize(){
      return size;
   }
   public boolean getToppings(){
      return toppings;
   }
   
   

   public static void main(String [] args){


   }//main
}//class   
